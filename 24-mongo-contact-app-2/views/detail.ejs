<%- include('layouts/header') %>
<%- include('layouts/nav') %>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data Contact Tidak Ada <a href="/contact" class="alert-link fw-normal"><br>&laquo; Kembali Ke Daftar Contact</a>
                </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama %></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
                    <p class="card-text"><%= contact.email %></p>
                    <a href="/contact/edit/<%= contact.nama %>" class="btn btn-warning badge">Edit</a>
                    <form action="/contact?_method=DELETE" method="post" class="d-inline">
                        <input type="hidden" name="nama" value="<%= contact.nama %>">
                        <button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin Ingin Menghapus?');">Delete</button>
                    </form>
                    <a href="/contact" class="card-link d-block mt-3">&laquo; Back</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>
